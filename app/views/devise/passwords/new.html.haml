%section.vh-100
  .container.py-5.h-100
    .row.d-flex.align-items-center.justify-content-center.h-100
      .col-md-8.col-lg-7.col-xl-6
        = image_tag 'forgot_password_image.svg', alt: 'Phone image', class: 'img-fluid'
      .col-md-7.col-lg-5.col-xl-5.offset-xl-1
        %p.text-center.h1.fw-bold.mb-5 Forgot your password?
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = render "devise/shared/error_messages", resource: resource
          .form-outline.mb-4.field
            = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg', id: 'form1Example13', placeholder: 'Email Address'
          .actions
            = f.submit "Send me reset password instructions", class: 'btn btn-primary btn-lg btn-block'
        %br/
        = render "devise/shared/links"
