%section.vh-100
  .container-fluid.h-100
    .row.d-flex.justify-content-center.align-items-center.h-100
      .col-md-9.col-lg-6.col-xl-5
        = image_tag 'sign_in_image.webp', alt: 'Sample Image', class: 'img-fluid'
      .col-md-8.col-lg-6.col-xl-4.offset-xl-1
        - if alert
          = render 'shared/alerts'
        %p.text-center.h1.fw-bold.mb-5 Sign in
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          / Email input
          .form-outline.mb-4.field
            = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg', id: 'form3Example3', placeholder: 'Enter a valid email address'
          / Password input
          .form-outline.mb-3.field
            = f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-lg', id: 'form3Example4', placeholder: 'Enter password'
          .d-flex.justify-content-between.align-items-center
            / Checkbox
            - if devise_mapping.rememberable?
              .form-check.mb-0.field
                = f.check_box :remember_me, class: 'form-check-input me-2', id: 'form2Example3', value: ''
                = f.label :remember_me, class: 'form-check-label', for: 'form2Example3'
          .text-center.text-lg-start.mt-4.pt-2.actions
            = f.submit "Login", class: 'btn btn-primary btn-lg', style: "padding-left: 2.5rem; padding-right: 2.5rem;"
          .divider.d-flex.align-items-center.my-4
            %p.text-center.fw-bold.mx-3.mb-0 Or
          .d-flex.flex-row.align-items-center.justify-content-center.justify-content-lg-start
            %button.btn.btn-primary.btn-floating.mx-1{:type => "button"}
              %i.fab.fa-google
            %button.btn.btn-primary.btn-floating.mx-1{:type => "button"}
              %i.fab.fa-facebook-f
            %button.btn.btn-primary.btn-floating.mx-1{:type => "button"}
              %i.fab.fa-twitter
            %button.btn.btn-primary.btn-floating.mx-1{:type => "button"}
              %i.fab.fa-linkedin-in
        %br/
        = render "devise/shared/links"
