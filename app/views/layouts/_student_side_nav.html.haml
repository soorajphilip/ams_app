%aside.main-sidebar.sidebar-dark-purple-1.elevation-4
  / Brand Logo
  %a.brand-link{:href => "/s/dashboard"}
    = image_tag 'ams_app_icon.png', alt: 'icon', class: 'brand-image img-circle elevation-3', style: "opacity: .8"
    %span.brand-text.font-weight-light AmsApp
  / Sidebar
  .sidebar
    / Sidebar user panel (optional)
    .user-panel.mt-3.pb-3.mb-3.d-flex
      .image
        - if current_user.avatar.present?
          = image_tag(current_user.avatar.variant(resize_to_fill: [150, 150]), class: "img-circle elevation-2")
        - else
          = image_tag "default_profile.png", alt: 'image', class: 'img-circle elevation-2', width: "150px"
      .info
        = link_to current_user.name.titleize, s_my_profile_path, class: 'd-block'
