%section{:style => "background-color: #eee;"}
  .container.py-3
    .d-flex.justify-content-between
      %h2.mb-3 My Profile
      = link_to 'Edit Profile', s_edit_profile_path, class: 'btn btn-primary mb-3'
    / .row
    /   .col
    /     %nav.bg-light.rounded-3.p-3.mb-4{"aria-label" => "breadcrumb"}
    /       %ol.breadcrumb.mb-0
    /         %li.breadcrumb-item
    /           %a{:href => "#"} Home
    /         %li.breadcrumb-item
    /           %a{:href => "#"} User
    /         %li.breadcrumb-item.active{"aria-current" => "page"} User Profile
    .row
      .col-lg-4
        .card.mb-4
          .card-body.text-center
            %img.rounded-circle.img-fluid{:alt => "avatar", :src => "https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp", :style => "width: 150px;"}/
            %h5.my-3= @current_user.name.titleize
            %p.text-muted.mb-1 Full Stack Developer
            %p.text-muted.mb-4 Bay Area, San Francisco, CA
            .d-flex.justify-content-center.mb-2
              %button.btn.btn-primary{:type => "button"} Follow
              %button.btn.btn-outline-primary.ms-1{:type => "button"} Message
        .card.mb-4.mb-lg-0
          .card-body.p-0
            %ul.list-group.list-group-flush.rounded-3
              %li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                %i.fas.fa-globe.fa-lg.text-warning
                %p.mb-0 https://mdbootstrap.com
              %li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                %i.fab.fa-github.fa-lg{:style => "color: #333333;"}
                %p.mb-0 mdbootstrap
              %li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                %i.fab.fa-twitter.fa-lg{:style => "color: #55acee;"}
                %p.mb-0 @mdbootstrap
              %li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                %i.fab.fa-instagram.fa-lg{:style => "color: #ac2bac;"}
                %p.mb-0 mdbootstrap
              %li.list-group-item.d-flex.justify-content-between.align-items-center.p-3
                %i.fab.fa-facebook-f.fa-lg{:style => "color: #3b5998;"}
                %p.mb-0 mdbootstrap
      .col-lg-8
        .card.mb-4
          .card-body
            .row
              .col-sm-3
                %p.mb-0 Full Name
              .col-sm-9
                %p.text-muted.mb-0 Johnatan Smith
            %hr/
            .row
              .col-sm-3
                %p.mb-0 Email
              .col-sm-9
                %p.text-muted.mb-0 example@example.com
            %hr/
            .row
              .col-sm-3
                %p.mb-0 Phone
              .col-sm-9
                %p.text-muted.mb-0 (097) 234-5678
            %hr/
            .row
              .col-sm-3
                %p.mb-0 Mobile
              .col-sm-9
                %p.text-muted.mb-0 (098) 765-4321
            %hr/
            .row
              .col-sm-3
                %p.mb-0 Address
              .col-sm-9
                %p.text-muted.mb-0 Bay Area, San Francisco, CA
